{
  "name": "plc_reader_software",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run index.ts",
    "raspberry": "bun build --compile --target=bun-linux-arm64 ./index.ts  --outfile plcreader_raspberry",
    "linux": "bun build --compile --target=bun-linux-x64 ./index.ts --outfile plcreader_linux",
    "windows": "bun build --compile --target=bun-windows-x64 ./index.ts  --outfile plcreader_windows.exe",
    "build": "bun run windows && bun run linux && bun run raspberry"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "socket.io-client": "^4.8.1"
  }
}
